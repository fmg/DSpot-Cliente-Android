<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comments_child_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="User's Name"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="15dp"/>

    <RatingBar
        android:id="@+id/comments_child_userRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/comments_child_userName" />

    <TextView
        android:id="@+id/comments_child_userComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/comments_child_userName"
        android:paddingLeft="15dp"
        android:text="A tua prima e mesmo boa!!!!" android:layout_marginTop="5dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/comments_child_userComment"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="5dp"
        android:background="#DADADA" />

</RelativeLayout>