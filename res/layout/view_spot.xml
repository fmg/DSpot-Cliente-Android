<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpapper" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:padding="10dp">

        <TextView
            android:id="@+id/view_spot_spotName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/view_spot_favourite"
            android:text="Name of the Spot"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginTop="10dp"/>

        <RatingBar
            android:id="@+id/view_spot_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:numStars="1"
            android:stepSize="1" android:layout_marginRight="10dp" android:layout_marginTop="10dp"/>

        <Gallery
            android:id="@+id/gallery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_spot_favourite"
            android:layout_centerHorizontal="true" android:layout_marginTop="10dp"/>

        <RatingBar
            android:id="@+id/view_spot_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/view_spot_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_spot_rating"
            android:layout_marginTop="15dp"
             android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adress" />
        
        
        <TextView
            android:id="@+id/view_spot_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_spot_adress"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location" />
        

        <TextView
            android:id="@+id/view_spot_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_spot_location"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sports" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_spot_sports"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" android:stretchColumns="0,1,2">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/view_spot_actionMaps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_map" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Map" android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/view_spot_actionCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_call"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Call" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:gravity="right">

                    <ImageView
                        android:id="@+id/view_spot_actionInvite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_messages" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Invite" android:gravity="center"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/view_spot_actionNavigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_directions" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Directions" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/view_spot_actionFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_facebook" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Share" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/view_spot_actionReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whisle" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Report" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RatingBar
            android:id="@+id/view_spot_rateSpot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:stepSize="1" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_spot_rateSpot"
            android:layout_marginTop="20dp" 
            android:background="@drawable/comment_background">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write your review"
                android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/view_spot_sendComment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/view_spot_commentReview"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textView7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button_selector"
                android:text="Send"
                android:textColor="#FFFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/view_spot_commentReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/view_spot_sendComment"
                android:inputType="textMultiLine" android:layout_below="@id/textView7" android:layout_marginTop="10dp">

                <requestFocus />
            </EditText>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_spot_commentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_below="@id/relativeLayout2" android:layout_marginTop="10dp">
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_spot_commentHolder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="More Comments"
            android:background="@drawable/blue_button_selector" 
            android:layout_marginRight="5dp"
            android:textStyle="bold"
        	android:textColor="#FFFFFFFF"
        	android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>